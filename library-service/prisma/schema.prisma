generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {  //main book info
  id      Int    @id @default(autoincrement())
  name    String 
  author  String
  isbn    String @unique
  edition Int  
  DOR     String
  copies  BookCopy[]

}

model BookCopy {  //instances/ copies of a book
  id  Int  @id @default(autoincrement())
  bookId  Int
  status  String  //available, borrowed
  book    Book @relation(fields: [bookId], references: [id], onDelete: Cascade)

}
